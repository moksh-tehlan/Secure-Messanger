<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    tools:context=".LoginActivities.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:onClick="goback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back_button"
            android:src="@drawable/back_button"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Enter your personal details to get started"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/roboto_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/first_name"
            android:background="@drawable/login_details_background"
            android:layout_width="0dp"
            android:hint="Fist name"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textColorHint="@color/fadedWhite"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:padding="8dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true" />
        <EditText
            android:id="@+id/last_name"
            android:layout_width="0dp"
            android:hint="Last name"
            android:maxLines="1"
            android:background="@drawable/login_details_background"
            android:textColor="@color/white"
            android:textColorHint="@color/fadedWhite"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC0A0A"
        android:visibility="gone"
        android:fontFamily="@font/roboto_regular"
        android:text="First name can't be empty"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Enter username"
        android:background="@drawable/login_details_background"
        android:textColorHint="@color/fadedWhite"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        android:padding="8dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/username_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC0A0A"
        android:visibility="gone"
        android:fontFamily="@font/roboto_regular"
        android:text=""/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Enter E-mail id"
        android:background="@drawable/login_details_background"
        android:textColorHint="@color/fadedWhite"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        android:padding="8dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DC0A0A"
        android:visibility="gone"
        android:fontFamily="@font/roboto_regular"
        android:text="E-mail id can't be empty"/>

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="Enter password"
        android:background="@drawable/login_details_background"
        android:textColorHint="@color/fadedWhite"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"
        android:padding="8dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/password_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#DC0A0A"
        android:fontFamily="@font/roboto_regular"
        android:text="Password can't be less then 6 character"/>

    <Button
        android:id="@+id/next_button"
        android:layout_marginTop="10dp"
        android:onClick="signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_regular"
        android:padding="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:backgroundTint="@color/primaryBlue"/>
