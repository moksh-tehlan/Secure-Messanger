<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".UserSetting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColor"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            android:onClick="goback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/roboto_bold"/>

        <ImageView
            android:id="@+id/upload_data"
            android:onClick="uploadData"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_check_24"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/first_name"
                android:backgroundTint="@color/white"
                android:layout_width="0dp"
                android:hint="Fist name"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
                android:textColorHint="@color/fadedWhite"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="8dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true" />
            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:hint="Last name"
                android:maxLines="1"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/fadedWhite"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DC0A0A"
            android:visibility="gone"
            android:fontFamily="@font/roboto_regular"
            android:text="First name can't be empty"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Enter username"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/fadedWhite"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:padding="8dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/username_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DC0A0A"
            android:visibility="gone"
            android:fontFamily="@font/roboto_regular"
            android:text=""/>
        <TextView
            android:id="@+id/log_out"
            android:onClick="logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out from this device"
            android:textSize="20sp"
            android:textColor="@color/primaryBlue"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>